// Initialize map
var map = L.map('map').setView([22.9734, 78.6569], 5); // India center

// Add OpenStreetMap tiles
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap'
}).addTo(map);

// Sample hotspots (you can replace with ML prediction later)
var hotspots = [
    { district: "Delhi", lat: 28.7041, lon: 77.1025, accidents: 230 },
    { district: "Mumbai", lat: 19.0760, lon: 72.8777, accidents: 180 },
    { district: "Chennai", lat: 13.0827, lon: 80.2707, accidents: 150 },
    { district: "Bangalore", lat: 12.9716, lon: 77.5946, accidents: 170 }
];

// Add markers for hotspots
hotspots.forEach(h => {
    L.marker([h.lat, h.lon])
        .addTo(map)
        .bindPopup(`<b>${h.district}</b><br>Accidents: ${h.accidents}`);
});
